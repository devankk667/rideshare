{
    "version": 2,
    "builds": [
        {
            "src": "RideFlow/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "RideFlow/dist"
            }
        },
        {
            "src": "backend/src/index.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/src/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "RideFlow/dist/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}